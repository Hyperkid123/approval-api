    </div>
    <div class="pf-m-fill pf-l-grid__item pf-m-12-col-on-xs pf-m-9-col-on-sm pf-m-10-col-on-lg pf-m-10-col-on-xl">
      <%= @order[key] %>
    </div>
  </div>
<% end %>
